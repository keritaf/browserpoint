@model Itransition.BrowserPoint.Web.Models.AccountConfirmationEmail
Content-Type: text/html
<p>
    Somebody has created a user on WebReg using this email. If it was you, click the
    link below or follow to the specified page and enter the code. Otherwise just ignore
    this message.
</p>
<p>
    <a href="@Url.Action("ConfirmEmail", "Account", new { token = Model.Token }, Request.Url.Scheme)" target="_blank">
        Confirmation link</a>
</p>
<p>
    Code: @Model.Token<br/>
    Page address: @Url.Action("ConfirmEmail", "Account", null, Request.Url.Scheme)
</p>
