@model Itransition.BrowserPoint.Web.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
}
<div class="row">
    <div class="span12">
        <h2>
            Login</h2>
        <p>
            Please enter your user name and password. @Html.ActionLink("Register", "Register")
            if you don't have an account.
        </p>
        @{
            var validationSummary = Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.");
            if (validationSummary!=null)
            {
            <div class="alert alert-block alert-error">
                <h4 class="alert-heading">
                    Error!</h4>
                @validationSummary
            </div>
            }
        }
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <fieldset>
                <legend>Account Information</legend>
                <div class="control-group">
                    <label class="control-label" for="UserName">
                        User name</label>
                    <div class="controls">@Html.TextBoxFor(m => m.UserName)
                        <span class="help-inline">@Html.ValidationMessageFor(m => m.UserName)</span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Password">
                        Password</label>
                    <div class="controls">@Html.PasswordFor(m => m.Password)
                        <span class="help-inline">@Html.ValidationMessageFor(m => m.Password)</span>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <label class="checkbox">@Html.CheckBoxFor(m => m.RememberMe)
                            Remember me
                        </label>
                    </div>
                </div>
                <div class="form-actions">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </fieldset>
        }
    </div>
</div>
